@using TestniApp.Models.Data;

@model IEnumerable<Invoice>

@{
    ViewBag.Title = "Home Page";
}

<h2>Invoice app</h2>
<div>
    @Html.ActionLink("Create new", "AddInvoice", "home", null, null)
</div>

<div class="card-deck">
    @if (Model.Count() > 0)
    {

        foreach (var item in Model)
        {
    <div class="card m-3" style="width:18rem">
        <div class="card-header">
            <h3>@item.Title</h3>
            <h5>@item.CreationDate.ToString("dd/MM/yyyy")</h5>
            <a>@Html.ActionLink("Details", "Details", new { Id = item.Id })</a>
        </div>
    </div>
        }
    }

    else
    {
        <h1>There are no invoices yet created</h1>
    }


</div>
